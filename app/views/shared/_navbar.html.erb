<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container">
    <%= link_to root_path, class: "navbar-brand d-flex align-items-center" do %>
      <%= image_tag "logo.jpg", class: "m-0" %>
      <h5 class= "mx-2 my-0 text-secondary"><strong>cargster</strong></h5>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Преглед на објави", posts_path, class: "nav-link text-center" %>
        </li>
        <li class="nav-item">
          <%= link_to "Мои објави", "#", class: "nav-link text-center" %>
        </li>
        <li class="nav-item">
          <%= link_to "Моја сметка", "#", class: "nav-link text-center" %>
        </li>
        <li class="nav-item">
          <% if current_page?(new_post_path) %>
            <%= link_to "+ Креирај објава", new_post_path, class: "nav-link btn btn-primary text-white disabled" %>
          <% else %>
            <%= link_to "+ Креирај објава", new_post_path, class: "nav-link btn btn-primary text-white" %>
          <% end %>
        </li>
        <% else %>
        <li class="nav-item active">
          <%= link_to "Најава", new_user_session_path, class: "nav-link text-center" %>
        </li>
        <li class="nav-item">
          <%= link_to "Регистрација", new_user_registration_path, class: "nav-link text-center" %>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
