<div class="container">
  <div class="row flex-row-reverse gx-3  mb-4">
    <%# PATTERNS %>

    <div class="col-sm-4" style="overflow: hidden;" >
      <p class="d-none d-lg-block px-3 my-3 text-muted"><%= t('suggestions') %></p>

      <div class="d-lg-none mt-2 d-flex align-items-center justify-content-between">
      <h5 class="m-3"><%= t('create_new_l') %></h5>
      <a href="#myCollapse" class="btn text-primary m-3" data-bs-toggle="collapse"><i class="bi bi-lightning"></i> <%= t('suggestions') %></a>
    </div>
    <div class="collapse show" id="myCollapse">
    <%= render "/shared/suggestions" %>
    </div>


    </div>
    <%# CREATE POST FORM %>
    <div class="col-sm-8">
    <p class="d-none d-lg-block px-3 my-3 text-muted"><%= t('create_new_l') %></p>
    <div class="bg-white rounded p-4">
      <%= simple_form_for(@post, method: :post, url: create_path, multipart: true) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-inputs">
        <div class="row">
          <div class="col-lg-6">
            <div class="row">
              <div class="col-6">
                <%= f.input :load_c, label: I18n.t('load'), input_html: { class: 'select2' }, prompt: I18n.t('country'), collection: @countries %>
              </div>
              <div class="col-6">
                <%= f.input :load_city, label: I18n.t('city'), placeholder: I18n.t('zip_and_place') %>
              </div>
            </div>
            <%= f.input :load_address, label: I18n.t('loading_address'), placeholder: I18n.t('full_address') %>

            <div class="row">
              <div class="col-6" >
                <%= f.input :load_date, as: :string, placeholder: I18n.t('load_date'), html5: true, label: I18n.t('load_date'), input_html: {class: "datepicker"} %>
              </div>
              <div class="col-6">
                <%= f.input :load_time, as: :time, html5: true, input_html: {style: "height: 2.25rem"}, label: I18n.t('load_time') %>
              </div>
            </div>

          </div>
          <div class="col-lg-6">
            <div class="row">
              <div class="col-6">
                <%= f.input :unload_c, label: I18n.t('unload'), input_html: { class: 'select2' }, prompt: I18n.t('country'), collection: @countries %>
              </div>
              <div class="col-6">
                <%= f.input :unload_city, label: I18n.t('city'), placeholder: I18n.t('zip_and_place') %>
              </div>
            </div>
            <%= f.input :unload_address, label: I18n.t('unload_address'), placeholder: I18n.t('full_address') %>
            <div class="row">
              <div class="col-6">
                <%= f.input :unload_date, as: :string, input_html: {class: "datepicker"}, placeholder: I18n.t('unload_date'),  html5: true, label: I18n.t('unload_date') %>
              </div>
              <div class="col-6">
                <%= f.input :unload_time, as: :time, html5: true, input_html: {style: "height: 2.25rem"}, label: I18n.t('unload_time') %>
              </div>
            </div>

          </div>
        </div>

        <div class="row">
          <div class="col-4">
            <%= f.input :weight, label: I18n.t('weight'), placeholder: "tons" %>
          </div>
          <div class="col-4">
            <%= f.input :length, label: I18n.t('length'), placeholder: "meters" %>
          </div>
          <div class="col-4">
            <%= f.input :price, label: I18n.t('price'), placeholder: "eur" %>
          </div>
        </div>
          <%= f.input :truck_type, label: I18n.t('truck_type'), prompt: I18n.t('truck_type'), input_html: { class: "tag-selector" },
            item_wrapper_class: 'tag-item', as: :check_boxes, collection: ["Tautliner", "Tandem", "Mega", "Frigo", "Platform", "Combi", "Truck (under 7.5t)", "ADR"] %>
        <%= f.input :description, label: I18n.t('description'), placeholder: I18n.t('more_details') %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, I18n.t('create'), class: "btn btn-primary text-white w-100" %>
      </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
