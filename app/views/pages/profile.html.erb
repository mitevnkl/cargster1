<div class="container">
  <div class="row gx-2">
    <div class="col-sm-6">
      <div class="bg-white rounded my-2 p-3">
        <p class="fancy fw-bolder">Personal info</p>
        <div class="d-flex justify-content-between">
          <p><i class="bi bi-person"></i> <%= @user.first_name %> <%= @user.last_name %></p>
          <p><i class="bi bi-building"></i> <%= @user.company_name %></p>
        </div>
        <div class="d-flex justify-content-between">
          <p><i class="bi bi-telephone-outbound"></i> <%= @user.mobile_nr %></p>
          <p class="m-0"><i class="bi bi-envelope"></i> <%= @user.email %></p>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="rounded bg-white my-2 p-3">
      <%= link_to "Log out", destroy_user_session_path,  :method => :delete, class: "btn w-100 my-1 btn-outline-danger" %>
      </div>
    </div>
  </div>
</div>
