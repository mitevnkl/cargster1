<div class="container">
  <div class="row">
    <div class="">
      <div class="bg-white col-lg-6 m-auto rounded-3 my-4 p-4">
        <div class="d-flex mb-3 justify-content-between align-items-center">
          <h1 class="m-0" id=""><strong><%= t('profile') %></strong></h1>
          <div>
            <% if !@user.profile_incomplete? %>
            <%= link_to t('edit'), edit_user_registration_path, class: "mx-2 text-primary" %>
            <% end %>
            <%= link_to t('log_out'), destroy_user_session_path,  :method => :delete, class: "text-danger" %>
          </div>
        </div>
          <% if !@user.profile_incomplete? %>
            <div class="d-flex justify-content-between">
              <p><i class="fa fa-solid fa-user"></i> <%= @user.first_name %> <%= @user.last_name %></p>
              <p><%= @user.company_name %> <i class="fa fa-solid fa-building"></i></p>
            </div>
            <div class="d-flex justify-content-between">
              <p class="text-muted"><%= @user.coc %> (CoC)</p>
              <p class="text-muted"><%= @user.vat %> (VAT)</p>
            </div>
            <div class="d-flex justify-content-between">
              <p><i class="fa fa-solid fa-phone"></i> <%= @user.mobile_nr %></p>
              <p class="m-0"><%= @user.email %> <i class="fa fa-solid fa-envelope"></i></p>
            </div>
          <% else %>
            <%= link_to t('complete_profilee'), edit_user_registration_path, class: "btn w-100 btn-lg text-white btn-primary btn-lg" %>
          <% end %>

      </div>
    </div>
  </div>
</div>
