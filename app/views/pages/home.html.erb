<div class="banner" style="height: 100vh; background-image: linear-gradient(rgba(255,255,255,0),rgba(255,255,255,0)), url(<%= image_path("bg.svg")%>);">
  <div class="container">

    <div class="pt-4">
      <h2 class="text-center fancy my-4"><%= t('hello') %></h2>
      <div class="d-none d-lg-block pt-0" style="padding-bottom: 0.015rem;">
      <%= form_tag posts_path, method: :get, class: "row gx-2 my-2" do %>
      <%= render "/shared/filter" %>
      <% end %>
      </div>
      <div class="d-lg-none">
        <%= link_to I18n.t('freight_overview'), posts_path, class: "btn bg-white text-primary shadow-sm w-100 mb-2" %>
        <% if user_signed_in? %>
        <%= link_to I18n.t('my_posts'), myposts_path, class: "btn bg-white text-primary shadow-sm w-100 mb-2" %>
        <%= link_to I18n.t('account'), profile_path, class: "btn bg-white text-primary shadow-sm w-100 mb-2" %>
        <% end %>
        <%= link_to I18n.t('create_new'), new_post_path, class: "btn btn-primary shadow-sm text-white mb-2 w-100" %>
      </div>
    </div>
  </div>
  <%= render "/shared/footer" %>
</div>




