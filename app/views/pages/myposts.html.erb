<div class="container">
    <div class="d-lg-none mt-2 d-flex align-items-center justify-content-between">
      <h4 class="mt-2 mx-2"><%= t('my-posts') %></h5>
      <a href="#myCollapse" class="text-primary m-2" data-bs-toggle="collapse"><i class="bi bi-funnel"></i> <%= t('filter') %></a>
    </div>
    <%= form_tag myposts_path, method: :get, class: "collapse show row gx-2 rounded-3", id:"myCollapse" do %>
    <%= render "/shared/filter" %>
    <% end %>
  <% if current_user.posts.count == 0 %>
  <p class="text-center mt-5"><%= t('void') %></p>
  <%= image_tag "void.svg", class: "rounded mx-auto d-block mt-3", style: "height: 33vh; width: 50%;" %>
  <% else %>
  <% @posts.each do |post| %>
  <div class="col-lg-12 gx-2">
  <%= link_to post_path(post) do %>
    <%= render '/shared/post', post: post %>
  <% end %>
  </div>
  <% end %>
  <% end %>
  <div class="my-3 d-flex justify-content-center">
  <%= will_paginate @posts, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
  </div>
</div>
