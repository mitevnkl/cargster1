<div class="container bg-white w-50 p-3 my-3">
  <h3>Регистрација на корисник</h3>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email,
                  label: 'Е-пошта',
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :mobile_nr,
                  label: 'Мобилен број',
                  required: true %>
      <div class="d-flex">
        <%= f.input :viber,
                    label: 'Користам Viber',
                    required: true %>
        <%= f.input :whatsapp,
                    label: 'Користам WhatsApp',
                    required: true,
                    class: ""%>
      </div>
      <%= f.input :company_name,
                  label: 'Име на компанија',
                  required: true %>
      <%= f.input :coc,
                  label: 'Матичен број на компанијата',
                  required: true %>
      <%= f.input :vat,
                  label: 'Даночен број на компанијата',
                  required: true %>
      <%= f.input :first_name,
                  label: 'Име на одговорно лице',
                  required: true %>
      <%= f.input :last_name,
                  label: 'Презиме на одговорно лице',
                  required: true %>
      <%= f.input :password,
                  label: 'Лозинка',
                  required: true,
                  hint: ("#{@minimum_password_length} карактери минумум" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  label: 'Потврда на лозинка',
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Регистрација", class: "btn btn-primary w-100 text-white" %>
    </div>
  <% end %>

</div>
