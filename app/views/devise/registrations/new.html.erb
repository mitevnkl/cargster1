<div class="banner" style="background-color: rgb(255,255,255); background-image:linear-gradient(rgba(255,255,255,0),rgba(255,255,255,0)), url(<%= image_path("bg.svg")%>);">
  <div class="container py-3">
    <div class="bg-white shadow p-4 rounded">
      <h3><%= t('register') %></h3>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">

          <div class="row">
            <div class="col-6" >
              <%= f.input :first_name,
                          label: I18n.t('first_name'),
                          required: true %>
            </div>
            <div class="col-6" >
              <%= f.input :last_name,
                          label: I18n.t('last_name'),
                          required: true %>
            </div>
          </div>

          <div class="row">
            <div class="col-lg-6">
            <%= f.input :email,
                        label: I18n.t('email'),
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email" }%>
            </div>
            <div class="col-lg-6">
            <%= f.input :mobile_nr,
                        label: I18n.t('mobile_nr'),
                        placeholder: "#{ I18n.t('example')} 38971329396",
                        required: true %>
            </div>
          </div>

          <div class="d-flex">
            <%= f.input :viber,
                        label: I18n.t('viber')%>
            <div class="mx-3">
              <%= f.input :whatsapp,
                          label: I18n.t('whatsapp')%>
            </div>
          </div>
          <%= f.input :company_name,
                      label: I18n.t('company_name'),
                      required: true %>
          <div class="row">
            <div class="col-lg-6">
            <%= f.input :coc,
                        label: I18n.t('company_id'),
                        required: true %>
            </div>
            <div class="col-lg-6">
            <%= f.input :vat,
                        label: I18n.t('vat'),
                        required: true %>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-6">
            <%= f.input :password,
                        label: I18n.t('password'),
                        required: true,
                        hint: ("#{@minimum_password_length} #{I18n.t('minimum_length')}" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" } %>
            </div>
            <div class="col-lg-6">
            <%= f.input :password_confirmation,
                        label: I18n.t('confirm_password'),
                        required: true,
                        input_html: { autocomplete: "new-password" } %>
            </div>
          </div>
        </div>

        <div class="form-actions">
          <%= f.button :submit, I18n.t('register'), class: "btn btn-primary w-100 text-white" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

