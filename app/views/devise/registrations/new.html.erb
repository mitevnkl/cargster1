<div class="container">

  <div class="bg-white p-4 col-lg-6 mx-auto mt-5 rounded" id="" action="">
    <h1 class="mb-3" id=""><strong><%= t('registration') %></strong></h1>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="my-2">
      <%= f.error_notification %>
      </div>
      <div class="form-inputs">

        <%= f.input :email,
                    label: I18n.t('email'),
                    placeholder: "bob@gmail.com",
                    required: true,
                    input_html: { autocomplete: "email" }
        %>

        <%= f.input :password,
                    label: I18n.t('password'),
                    placeholder: "********",
                    required: true,
                    hint: ("#{@minimum_password_length} #{I18n.t('minimum_length')}" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" }
        %>


        <%= f.input :password_confirmation,
                    label: I18n.t('confirm_password'),
                    placeholder: "********",
                    required: true,
                    input_html: { autocomplete: "new-password" }
        %>


        <div class="my-2">
          <%= f.input :terms,
                        label: t('terms'),
                        required: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, I18n.t('register'), class: "btn btn-primary w-100 text-white" %>
        </div>

      </div>
    <% end %>
  </div>
</div>

